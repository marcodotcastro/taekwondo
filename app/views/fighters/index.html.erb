<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Lutadores</h1>
  <%= link_to 'Novo Lutador', new_fighter_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @fighters.each do |fighter| %>
    <div class="bg-white rounded-lg shadow p-6">
      <% if fighter.photo.attached? %>
        <%= image_tag fighter.photo, class: "w-full h-48 object-cover rounded-lg mb-4" %>
      <% end %>

      <h2 class="text-xl font-bold mb-2"><%= fighter.name %></h2>

      <div class="text-gray-600">
        <% if fighter.category.present? %>
          <p>Categoria: <%= fighter.category %></p>
        <% end %>

        <% if fighter.weight.present? %>
          <p>Peso: <%= fighter.weight %> kg</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

