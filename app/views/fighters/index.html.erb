<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Lutadores</h1>
    <%= link_to 'Novo Lutador', new_fighter_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @fighters.each do |fighter| %>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="aspect-w-3 aspect-h-4 mb-4">
          <% if fighter.photo.attached? %>
            <%= image_tag fighter.photo, class: "w-full h-48 object-cover rounded-lg" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 rounded-lg flex items-center justify-center">
              <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          <% end %>
        </div>

        <div class="space-y-2">
          <h2 class="text-xl font-bold"><%= fighter.name %></h2>

          <% if fighter.category.present? %>
            <p class="text-gray-600">
              <span class="font-medium">Categoria:</span> <%= fighter.category %>
            </p>
          <% end %>

          <% if fighter.weight.present? %>
            <p class="text-gray-600">
              <span class="font-medium">Peso:</span> <%= fighter.weight %> kg
            </p>
          <% end %>

          <div class="mt-4 pt-4 border-t flex justify-end">
            <%= link_to 'Ver lutas', matches_path(fighter_id: fighter.id), class: 'text-blue-500 hover:text-blue-600' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @fighters.empty? %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500 text-lg mb-4">Nenhum lutador cadastrado</p>
      <%= link_to 'Cadastrar primeiro lutador', new_fighter_path, class: 'bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600' %>
    </div>
  <% end %>
</div>