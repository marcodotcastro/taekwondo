<div class="max-w-lg mx-auto bg-white rounded-lg shadow p-6">
  <h1 class="text-2xl font-bold mb-6">Novo Lutador</h1>

  <%= form_with(model: @fighter, class: "space-y-4", local: true, html: { multipart: true }) do |f| %>
    <div>
      <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :category, "Categoria", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :category, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :weight, "Peso (kg)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :weight, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :photo, "Foto", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :photo, class: "mt-1 block w-full" %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= link_to 'Cancelar', fighters_path, class: 'px-4 py-2 border rounded-md hover:bg-gray-100' %>
      <%= f.submit "Criar Lutador", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>
</div>